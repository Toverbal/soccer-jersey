  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-google": "^0.14.0",
    "ts-loader": "^8.0.17",
    "tsc": "^2.0.3",
    "typedoc": "^0.24.7",
    "typescript": "4.6.4",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^4.15.0"
